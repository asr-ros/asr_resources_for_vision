<!-- Marlin head launch. @author Pascal Meissner. @version See SVN -->

<!-- This file just specifies hardware ids for a certain rig. -->
<launch>
  <arg name="left_camera_calibration_parameters" />
  <arg name="right_camera_calibration_parameters" />
  
  <arg name="user_configs" />

  <include file="$(find asr_resources_for_vision)/launch/image_acquisition_pipelines/stereo_rig.launch">
    <arg name="left_camera_guid" value="000a47010e072230" />
    <arg name="right_camera_guid" value="000a47010e072231" />

    <arg name="stereo_rig_configs_path" value="$(find asr_resources_for_vision)/launch/image_acquisition_pipelines/stereo_rigs/marlin.yaml" />

    <arg name="left_camera_info_url" value="$(arg left_camera_calibration_parameters)" />
    <arg name="right_camera_info_url" value="$(arg right_camera_calibration_parameters)"/>

    <arg name="user_configs_for_both_cams_path" value="$(arg user_configs)" />

  </include>

</launch>